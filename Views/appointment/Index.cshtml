@model IEnumerable<appointment>
@{
    ViewBag.Title = "All appointments";
}
<h1>All appointments</h1>
@if (Model.Any())
{
    foreach (var app in Model)
    {
        <div class="card mb-3">
    <div class="card-header">
        
    </div>
    <div class="card-body">
        <h5 class="card-title">Shop: @app.shopId</h5>
        <h5 class="card-title">Barber: @app.barberId</h5>
        <h5 class="card-title">Date: @app.Date</h5>
        <h5 class="card-title">Approval: @app.appointApprove</h5>
        <h5 class="card-title">Reservation time from: @app.stime</h5>
        <h5 class="card-title">To: @app.etime</h5>
    </div>
   
    <div class="card-footer">
        <form method="post" asp-action="Delete" asp-controller="app" asp-route-id="@app.appointID" class="mt-3">
            <input type="submit" name="Delete" value="Delete" onclick="return confirm('Are you sure you want to Delete The appointment?')" class="btn btn-danger"/>
        </form>
        <br />
        <a asp-action="Edit" asp-controller="app" asp-route-id="@app.appointID" class="btn btn-primary">Edit</a>
    </div>
</div>
    }
}
else
{
    <div class="card">
    <div class="card-header">
        No appointments created yet
    </div>
</div>
}