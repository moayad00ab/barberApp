@model IEnumerable<offers>
@{
    ViewBag.Title = "All offers";
}
<h1>All offers</h1>
@if (Model.Any())
{
    foreach (var offer in Model)
    {
        <div class="card mb-3">
    <div class="card-header">

    </div>
    <div class="card-body">
        <h5 class="card-title">@offer.percentage</h5>
    </div>
    <div class="card-footer">
        <form method="post" asp-action="Delete" asp-controller="offer" asp-route-id="% @offer.offerID" class="mt-3">
            <input type="submit" name="Delete" value="Delete"
                onclick="return confirm('Are you sure you want to Delete @offer.percentage offer?')"
                class="btn btn-danger" />
        </form>
        <br />
    </div>
</div>
    }
}
else
{
    <div class="card">
    <div class="card-header">
        No offers created yet
    </div>
</div>
}
