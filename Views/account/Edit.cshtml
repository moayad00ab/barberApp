@model barber.ViewModels.EditViewModel
@{
    ViewBag.Title = "Edit User";
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <input asp-for="Id" readonly class="form-control" type="hidden">

@if(User.IsInRole("Barber"))
    {
<div class="form-group ">
    
        <label asp-for="isAvilable" class="col-form-label mt-4">Are you available?</label>
        
            @Html.CheckBoxFor(model => model.isAvilable, true)  
            <span asp-validation-for="isAvilable" class="text-danger"></span>
        
    </div>
    }

    @if (User.IsInRole("Barber"))
    {
         <div class="form-group ">
         
            <input asp-for="barbersShop" class="form-control" type="hidden">
            <span asp-validation-for="barbersShop" class="text-danger"></span>
        
    </div>
    }
     @if (User.IsInRole("BarberShop"))
    {
         <div class="form-group ">
        <label asp-for="shopName" class="col-form-label mt-4"></label>
        
            <input asp-for="shopName" class="form-control">
            <span asp-validation-for="shopName" class="text-danger"></span>
        
    </div>
    }
    


    <div class="form-group ">
        <label asp-for="UserName" class="col-form-label mt-4"></label>
        
            <input asp-for="UserName" class="form-control">
            <span asp-validation-for="UserName" class="text-danger"></span>
        
    </div>

    <div class="form-group ">
        <label asp-for="Email" class="col-form-label mt-4"></label>
       
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        
    </div>
    <div class="form-group ">
        <label asp-for="PhoneNumber" class="col-form-label mt-4"></label>
            <input asp-for="PhoneNumber" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

    </div>
@if (User.IsInRole("BarberShop"))
{
    

        <div class="form-group ">
        <label asp-for="sWorkTime" class="col-form-label mt-4"></label>
            <input asp-for="sWorkTime" class="form-control"  placeholder="Please enter in the following format: HH:MM tt">
            <span asp-validation-for="sWorkTime" class="text-danger"></span>
        </div>
        <div class="form-group ">
        <label asp-for="eWorkTime" class="col-form-label mt-4"></label>
            <input asp-for="eWorkTime" class="form-control" placeholder="Please enter in the following format: HH:MM tt">
            <span asp-validation-for="eWorkTime" class="text-danger"></span>

    </div>
    }
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary"
                onclick="return confirm('Are you sure you want to Update your information?')">Update</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Cancel</a>
        </div>
    </div>

</form>


@section scripts{}