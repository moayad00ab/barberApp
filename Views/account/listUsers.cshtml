
@model IEnumerable<users>

@{
    ViewBag.Title = "All Users";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>All Users</h1>

@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div class="card mb-3">
    <div class="card-header">
        Username : @user.UserName
    </div>
    <div class="card-body">
        <h5 class="card-title">@user.Email</h5>
    </div>
    <div class="card-footer">
        <form method="post" asp-action="Delete" asp-controller="Account" asp-route-id="@user.Id" class="mt-3">
            <input type="submit" name="Delete" value="Delete" onclick="return confirm('Are you sure you want to Delete @user.UserName user?')" class="btn btn-danger"/>
        </form>
        <br />
        <a asp-action="Edit" asp-controller="Account" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
    </div>
</div>
    }
}
else
{
    <div class="card">
    <div class="card-header">
        No users created yet
    </div>
</div>
}