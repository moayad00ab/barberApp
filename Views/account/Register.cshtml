@model barber.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "User Registration";
}

<div class="row justify-content-center" >
    <div class="col-md-4">
        <form method="post">
            @if (ViewBag.shop_name != null)
            {
                <span class="text-danger">@ViewBag.shop_name</span>
            }
                <br />
                <div class="form-group">
                    <label asp-for="fName"></label>
                    <input asp-for="fName" class="form-control" />
                    <span asp-validation-for="fName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="lName"></label>
                    <input asp-for="lName" class="form-control" />
                    <span asp-validation-for="lName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> 
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
        
            <div class="form-group">
                <label asp-for="EmailConfirmed"></label>
                <input asp-for="EmailConfirmed" class="form-control" />
                <span asp-validation-for="EmailConfirmed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>

                @if (ViewBag.MsgUser != null)
                {
                    <p class="text-danger">@ViewBag.MsgUser</p>
                }
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PConfirmation"></label>
                <input asp-for="PConfirmation" class="form-control" />
                <span asp-validation-for="PConfirmation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <br>
            <p class="muted">What type of user are you?</p>
            @Html.RadioButtonFor(model => model.userType, "Customer") Customer<br />
            @Html.RadioButtonFor(model => model.userType, "Barber") Barber<br />
            @Html.RadioButtonFor(model => model.userType, "BarberShop") Barber shop<br />
            <span asp-validation-for="userType" class="text-danger"></span>
            <br />
                <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                    <label for="btnradio1f" class="btn btn-outline-primary">
                    <input type="radio" class="btn-check" id="btnradio1" name="chk" autocomplete="off" value="" checked="" onclick="ShowHideDiv(value)" checked />
                    Customer
                </label>
                <label for="chkBarber" class="btn btn-outline-primary">
                    <input type="radio" class="btn-check" id="chkBarber" name="chk" autocomplete="off" value="chkBarber" checked="" onclick="ShowHideDiv(value)" checked/>
                    Barber
                </label>
                <label for="chkShop" class="btn btn-outline-primary">
                    <input type="radio" class="btn-check" id="chkShop" name="chk" autocomplete="off" value="chkShop" checked="" onclick="ShowHideDiv(value)" checked/>
                    Barber shop owner
                </label>
                </div>
                
                 <div id="BarbersShop" style="display: none">
                <label asp-for="barbersShop"></label>
               <select class="form-select" asp-for="barbersShop" class="form-control"
                    asp-items="ViewBag.Users"></select>
            </div>
            <div id="ShopOwn" style="display: none">
                <label asp-for="shop"></label>
                <input asp-for="shop" class="form-control" />
            </div>
            <hr />
                <br><br>
                <button type="submit" class="btn btn-primary">Sign Up</button>
                <br><br>
        </form>
    </div>
</div>

@section Scripts {

<script>
    function ShowHideDiv(name) {
        var BarbersShop = document.getElementById("BarbersShop");
        var chkBarber = document.getElementById("chkBarber");
        var chkShop = document.getElementById("chkShop");
        var ShopOwn = document.getElementById("ShopOwn");
        if(name == "chkBarber"){
        BarbersShop.style.display = chkBarber.checked ? "block" : "none";
        ShopOwn.style.display = chkShop.checked ? "display" : "none";
        }
        if(name == "chkShop"){
        BarbersShop.style.display = chkBarber.checked ? "display" : "none";
        ShopOwn.style.display = chkShop.checked ? "block" : "none";    
        }
        if(name == "customer"){
        BarbersShop.style.display = chkBarber.checked ? "display" : "none";
        ShopOwn.style.display = chkShop.checked ? "display" : "none";    
        }
    }
</script>


}