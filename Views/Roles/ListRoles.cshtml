@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "All Rolles";

}
</h1>All Rolles</h1>

@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card mb-3">
    <div class="card-header">
        rolename : @role.Name
    </div>

    <div class="card-footer">
        <form method="post" asp-action="Delete" asp-controller="roles" asp-route-id="@role.Id" class="mt-3">
            <input type="submit" name="Delete" value="Delete"
                onclick="return confirm('Are you sure you want to Delete @role.Name role?')" class="btn btn-danger" />
        </form>
        <br />
        <a asp-action="EditRole" asp-controller="roles" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
    </div>
</div>
    }
}

else
{

    <div class="card">

</div>
    <div class="card-header">

    No roles created yet!
</div>

}
<div class="card-body">
</div>

<h5 class="card-title">
    use the button below to creat a role
</h5>
<a class="btn btn-primary" style="width:auto" asp-controller="roles" asp-action="CreateRole">
    Create Role
</a>
